<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" href="/stylesheets/app.css" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<!--Fonts-->
		<link
			href="https://fonts.googleapis.com/css2?family=League+Spartan:wght@300&display=swap"
			rel="stylesheet" />
		<!--Font Awesome-->
		<script
			src="https://kit.fontawesome.com/3808de5cb1.js"
			crossorigin="anonymous"></script>

		<title>Home</title>
	</head>

	<body>
		<div class="container homepage">
			<%if(CurrentUser.DP.data){%>

			<img
				id="user-dp"
				src="data:image/<%=CurrentUser.DP.contentType%>;base64, 
                         <%=CurrentUser.DP.data.toString('base64')%>" />
			<%}%>
			<h2 class="home-head">Welcome, <%=CurrentUser.name %></h2>
			<div class="calender-container">
				<div class="lastFiveDays">
					<div class="lastFiveDays-Child">
						<div>9</div>
						<div>Mon</div>
					</div>
					<div class="lastFiveDays-Child">
						<div>10</div>
						<div>Tue</div>
					</div>
					<div class="lastFiveDays-Child">
						<div>11</div>
						<div>Wed</div>
					</div>
					<div class="lastFiveDays-Child">
						<div>12</div>
						<div>Thur</div>
					</div>
					<div class="lastFiveDays-Child">
						<div>13</div>
						<div>Fri</div>
					</div>
				</div>
				<div class="todays-calender">No Active Reminder</div>
			</div>
			<div class="grid-container">
				<a href="/news" class="home-box">
					<img src="img/report.svg" alt="" />
					<h3>MRI Reports</h3>
					<div></div>
				</a>
				<a href="/games" class="home-box">
					<img src="img/games.svg" alt="" />
					<h3>Games</h3>
					<div></div>
				</a>
				<a href="/events" class="home-box">
					<img src="img/bell.svg" alt="" />
					<h3>Reminders</h3>
					<div></div>
				</a>
				<a href="/contacts" class="home-box">
					<img src="img/call.svg" alt="" />
					<h3>Urgent Contact</h3>
					<div></div>
				</a>
			</div>
			<!-- <a href="/dashboard" class="home-box" style="margin-top: 5%; width: 50%;" >
            <img src="img/dashboard.png" width="96" height="96" alt="">
            <h3>Dashboard</h3>
        </a> 
         removed a href="/logout" from below-->
			<a class="purp-btn logout" id="guesswhoform">
				<img src="img/comment.svg" alt="" />
				<img id="home" src="img/home.svg" alt="" />
				<img id="contact" src="img/person.svg" alt="" />
				<img src="img/calender.svg" alt="" />
				<!-- <img src="img/logout.svg" alt=""> -->
			</a>
		</div>
		<script
			src="https://code.jquery.com/jquery-3.5.1.min.js"
			integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
			crossorigin="anonymous"></script>
		<script src="js/register.js"></script>
		<script>
			var buttons = document.getElementsByClassName("lastFiveDays-Child");
			for (var i = 0; i < buttons.length; i++) {
				buttons[i].onclick = function () {
					console.log(this.classList);
					if (this.classList.contains("active")) {
						this.classList.remove("active"); // Remove "clicked" class if already present
					} else {
						this.classList.add("active"); // Add "clicked" class if not present
					}
				};
			}
			const home = document.getElementById("home");
			home.addEventListener("click", () => {
				window.location.href = "/home";
			});
			const contact = document.getElementById("contact");
			contact.addEventListener("click", () => {
				window.location.href = "/contacts";
			});
		</script>
	</body>
</html>
